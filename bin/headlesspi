#!/usr/bin/env node

var forever = require('forever-monitor');

var child = new (forever.Monitor)('server.js', {
  silent: false,
  watch:true,
  watchDirectory: 'apps',
  watchIgnorePatterns: ['_*'],
  args: []
});

child.start();

var shutdown = function(){
  console.log("Stopping Process");
  child.stop();
  setTimeout(() => {
    process.exit(0);
  }, 1000);
}

process.on('SIGTERM', shutdown);

